{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "outDir": "./dist",
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "types": ["vite/client"],
    "typeRoots": ["./node_modules/@types", "__generated__", "src/types"],
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"],
      "/*": ["*"]
    }
  },
  "include": ["src/*", "src/**/*"],
  "exclude": ["node_modules", "src/api/*.graphql"],
}