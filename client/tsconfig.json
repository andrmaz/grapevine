{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "outDir": "./dist",
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "types": ["jest"],
    "typeRoots": ["./node_modules/@types", "__generated__", "src/types"],
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"],
      "/*": ["*"],
      "test-utils": ["utils/test-utils"]
    }
  },
  "include": ["src/*", "src/**/*", "__tests__", "config/jest-setup.ts"],
  "exclude": ["node_modules", "src/api/*.graphql", "scripts/*.js"],
}